{
  "extends": "./packages/tsconfig/react-lib.json",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
